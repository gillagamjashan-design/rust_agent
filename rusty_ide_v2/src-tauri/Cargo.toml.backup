[package]
name = "rusty-ide"
version = "0.1.0"
description = "A Tauri-based Rust IDE with AI agent integration"
authors = ["Rusty IDE Team"]
license = "MIT"
repository = "https://github.com/yourusername/rusty-ide"
edition = "2021"

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html

[build-dependencies]
tauri-build = { version = "1.5", features = [] }

[dependencies]
tauri = { version = "1.5", features = ["shell-open", "fs-all", "path-all", "process-all", "dialog-all"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
anyhow = "1.0"

# PTY terminal support
portable-pty = "0.8"

# File system watching
notify = "6.1"

# Directory helpers
home = "0.5"

# Async runtime
tokio = { version = "1.35", features = ["full"] }

# UUID generation
uuid = { version = "1.6", features = ["v4", "serde"] }

# Synchronization primitives
parking_lot = "0.12"

# DateTime handling
chrono = { version = "0.4", features = ["serde"] }

[features]
# This feature is used for production builds or when `devPath` points to the filesystem
# DO NOT REMOVE!!
custom-protocol = ["tauri/custom-protocol"]

[target."cfg(windows)".dependencies]
windows = { version = "0.52", features = ["Win32_Foundation", "Win32_System_Console"] }
